<% tags = @instagram_arts.tags.split %>
<script>
  function alert(words){
    var iframe = document.createElement("IFRAME");
    iframe.setAttribute("src", 'data:text/plain,');
    document.documentElement.appendChild(iframe);
    window.frames[0].window.alert(words);
    iframe.parentNode.removeChild(iframe);
  }
</script>
<div class="row pre-head">

</div>
<div class="row image-container border-bottom">
  <div class="large-12 image-wrapper main-image">
    <%= image_tag @instagram_arts.image_url, alt: @instagram_arts.tags %>
  </div>
</div><!-- div.image-container -->
<div class="row primary-actions">
  <div class="large-12 column">
    <div class="row button-wrapper">
      <div class="text-center  large-6 medium-6 small-6 column">
        <%= link_to 'Map', "comgooglemaps-x-callback://?q=#{@instagram_arts.latitude},#{@instagram_arts.longitude}&center=#{@instagram_arts.latitude},#{@instagram_arts.longitude}&x-success=artfoundapp://?resume=true&x-source=Return to Artfound", :class=>'small-12 tiny button round secondary map-button-link' %>
      </div>
      <div class="text-center  large-6 medium-6 small-6 column">
        <a href="mailto:?subject=Check out this street art&body=There is amazing art right here: http://maps.google.com/maps/api/staticmap?size=408x518&sensor=false&zoom=16&markers=<%= @instagram_arts.latitude %>,<%= @instagram_arts.longitude %>" class="small-12 tiny button round primary share-button">
          Share
        </a>
      </div>
    </div><!-- div.button-wrapper -->
    <div class="fr secondary-button-wrapper row column ">
      <div class="">
        <a href="#" class="flag-button">Flag: Not Street Art</a>
      </div>
    </div><!-- div.secondary-button-wrapper -->
  </div>
</div><!-- div.primary-actions -->

<div class="row secondary-actions border-bottom">
  <div class="small-12 column">
    <div class="row border-bottom">
      <h4 style="text-align: center;"><%= @distance_away %> miles away</h4>
      <h4 class="subheader"></h4>
    </div>
  </div>
  <div class="small-12 column">
    <div class="large-12 image-wrapper row map-wrap border-bottom">
      <%= link_to "comgooglemaps-x-callback://?q=#{@instagram_arts.latitude},#{@instagram_arts.longitude}&center=#{@instagram_arts.latitude},#{@instagram_arts.longitude}&x-success=artfoundapp://?resume=true&x-source=Return to Artfound" do %>
        <%= image_tag "http://maps.google.com/maps/api/staticmap?size=800x400&sensor=false&zoom=16&markers=#{@instagram_arts.latitude}%2C#{@instagram_arts.longitude}" %>
      <% end %>
    </div>
  </div>
</div>

<div class="row tag-container border-bottom">
  <% tags.each do |tag| %>
  <h5><%= tag %></h5>
  <% end %>
</div>

<%= render 'layouts/footer' %>

