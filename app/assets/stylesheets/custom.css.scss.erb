.white-bg{
  background: white;
}

.body-to{
  position: relative;
}

.notice-bar{
  position: absolute;
  top: 0px;
  width: 100%;
}

.top-bar{
  .name{
    a b img{
      background: #FFF;
      border-radius: 50px;
      overflow: hidden;
    }
  }
}

.small-image{
max-height: 150px;
width: auto;
}

.overflow-y{
width: 100%;
overflow: hidden;
}

.right{
float: right;
}

.left{
float: left;
}

.text-right{
text-align: right;
}

.text-center{
text-align: center;
}

.fixed-bottom{
position: fixed;
bottom: 0px;
}

.content-wrapper{
padding-bottom: 5rem;
margin-bottom: 2.875rem;
}

.flex-video{
overflow-y: scroll !important;
}


.privacy-page *{
 color: #333 !important;
}

.button.secondary a{
  color: #111;
}

.hero-modal{
  padding-top: 20%;
  padding-bottom: 20%;
  text-align: center;
}

.no-space, .no-space img{
  padding: 0em;
  margin: 0em;
}

.row-content{
  text-align: center;
  padding-top:10px;
  padding-bottom:10px;
  max-width: 1000px;
  margin: 0 auto;
}


@media screen and (min-width: 700px){
  .row-content{
    text-align: left;
  }


  .hero-modal{
    text-align: left;
    background-color: none;
  }

  .hero-modal{
    padding-top: 10%;
    padding-bottom: 0%;
  }

  .hero-title,
  .hero-subtitle{
    display: inline-block;
  }

  .right-f{
    position: absolute;
    right: 10px;
    z-index: 100;
  }

  .bottom-screen{
  }


}
.bottom-screen{

    background-color:#F6F6F6;
    bottom: 0px;
}

.text-center{

}


.no-marg{
  margin-bottom: 0px;
  margin-left: 0px;

}

.download-hero{
  background-color: rgba(57, 139, 20, 0.8);
  color: white;
  padding: 15px 30px;
  font-size: 1.2em;
}

.border-dots{
  padding-left: 0px !important;
  border-bottom: 1px dotted #111;
}

.hero-modal *{
  font-weight: 600 !important;
  letter-spacing: 0.5px;
  color: #F6F6F6;
}

.promo-lnk{
  text-align: center;
  margin: 0 10px 0 10px;
  display: inline-block;
  color: #F6F6F6;
}
.promo-lnk a:hover{
  opacity: 1;
}
.promo-lnk a
{
  opacity: .7;
  border: 2px solid #111;
  border-radius: 10px;
  padding-bottom: 7px;
  color: #F6F6F6;
}
.promo-lnk a img{
  border: none;
}

.content-wrap{
  width: 100%;
}

.video-bg{
  background: black !important;
}

.video-link img{
  padding: 0px;
  margin-bottom: -10px;
}

.video-link a{
 opacity: .8;
}
.video-link a:hover{
 opacity: 1;
}

.white a{
  color: white;
}

.video-con{
  position: absolute;
  top: 0px;
  width: 100%;
  left: 0;
  right: 0;
}

.video-container{

  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  top: 5%;
}
video{
  box-shadow: 0px 0px 100px 0px;
  max-height: 80%;
  margin: 0 auto;
}

@media screen and (min-width: 700px){
  .image-wrap.iphone{
    background-image: url(<%= asset_path "iphone-mask.png" %>);
  }
}
.image-wrap.iphone{
  flex: 1;
  width: 100%;
  background-color: #201F1F;
  background-position: right center;
  background-size:cover;
  background-repeat: no-repeat;
  background-color: black;
}

.row{
  width: 100%;
}

.text-row{
  max-width:960px;
  margin: 0 auto;
  width: 100%;
  padding: 20px 10px;
  color: #F6F6F6;
}

.hero-title{
  margin-right: 5px;
  margin-bottom: 0em;
}
.hero-subtitle{
  font-weight: 300;
  font-size: 1em;
}

@media screen and (min-width: 700px){

  .desktop-left{
    float: left !important;
  }
  .desktop-right{
    float: right !important;
  }
}
